<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/formbackground2"
        android:padding="10dp">

        <TextView
            android:id="@+id/uName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#097ff4"
            android:text="Name"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/uName"
            android:id="@+id/table1"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="contact no: "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/uno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact no"
                android:gravity="center_vertical"
                android:textSize="20sp"
                />
        </TableRow>



        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/table1"
            android:id="@+id/table3"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Address "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtaddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:gravity="center_vertical"
                android:textSize="15sp"
                />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/table3"
            android:id="@+id/table10"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Area: "
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/txtarea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="area"
                android:gravity="center_vertical"
                android:textSize="15sp"
                />
        </TableRow>


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/table10"
            android:id="@+id/table5"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sub Area: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtsubarea1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sub area"
                android:gravity="center_vertical"
                android:textSize="15sp"
                />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/table5"
            android:id="@+id/table6"
            android:layout_marginTop="5sp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Blood: "
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtblood1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood"
                android:gravity="center_vertical"
                android:textSize="15sp"
                />
        </TableRow>

