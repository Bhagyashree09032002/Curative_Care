<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegUser"
        android:hint="First Name"
        android:maxLines="1"
        android:maxLength="30"
        android:inputType="textPersonName"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegMUser"
        android:maxLines="1"
        android:maxLength="20"
        android:hint="Middle Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/editTextRegUser"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegLUser"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:maxLength="20"
        android:layout_below="@+id/editTextRegMUser"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Click Here to select Date Of Birth"
        android:textSize="20sp"
        android:ems="10"
        android:layout_below="@+id/editTextRegLUser"
        android:id="@+id/editTextSRegDOB"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSRegDOB"
        android:hint="Mail Id"
        android:maxLength="50"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:id="@+id/editTextRegMailId"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextRegMailId"
        android:hint="Mobile Number"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="10"
        android:textStyle="bold"
        android:id="@+id/editTextRegMobileNo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextRegMobileNo"
        android:hint="Relative Mobile Number"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="10"
        android:textStyle="bold"
        android:id="@+id/editTextRelative"/>

    <Spinner
        android:id="@+id/spinnerBlood"
        android:layout_below="@+id/editTextRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/spinner_style">
</Spinner>
    <Spinner
        android:id="@+id/spinnerBP"
        android:layout_below="@+id/spinnerBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/spinner_style">
    </Spinner>
    <Spinner
        android:id="@+id/spinnerAllergy"
        android:layout_below="@+id/spinnerBP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/spinner_style">
    </Spinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerAllergy"
        android:hint="Any Problems"
        android:maxLines="1"
        android:maxLength="50"
        android:inputType="text"
        android:textStyle="bold"
        android:id="@+id/editTextProblems"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgphoto"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editTextProblems"
        app:srcCompat="@drawable/addpic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgphoto"
        android:hint="Password"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="20"
        android:inputType="textPassword"
        android:id="@+id/editTextRegPassword"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:id="@+id/buttonSubmit"
        android:layout_below="@+id/editTextRegPassword"/>
</RelativeLayout>

</ScrollView>
