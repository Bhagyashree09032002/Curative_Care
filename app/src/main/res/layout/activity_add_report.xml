<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReport">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Report Details"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Report Name"
            android:maxLength="30"
            android:maxLines="1"
            android:id="@+id/editAddReportName"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:maxLines="1"
            android:id="@+id/editAddReportComment"
            android:hint="Comment"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textAddReportDate"
            android:text="Click Here To Add Report Date"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:background="@drawable/addpic"
            android:layout_marginTop="10dp"
            android:id="@+id/imageAddReportImage"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/btnAddReportDetailsOk"
            android:background="@drawable/btn8"
            android:text="Add Report Details"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
